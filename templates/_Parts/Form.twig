{% autoescape true %}
<div class="postform">

  <h1>投稿フォーム</h1>

  <form method="post" action="/post/commit">

    <input type="hidden" name="{{csrf_key}}" value="{{csrf_token}}">
 
     <div class="form-group {% if error_list.nickname %}has-error{% endif %}">
       <p class="control">
         <label class="label">ニックネーム<em>半角英数字16文字まで</em></label>
         <input type="text" name="nickname" value="{{params.nickname}}" placeholder="ニックネームを入力" class="form-control">
         <p class="text-warning">{{error_list.nickname}}</p>
       </p>
    </div>

    <div class="form-group {% if error_list.body %}has-error{% endif %}">
      <p class="control">
        <label class="label">テキスト<em>1000文字まで</em></label>
        <textarea name="body" placeholder="本文を入力" rows="10" cols="100">{{params.body}}</textarea>
        <p class="text-warning">{{error_list.body}}</p>
      </p>
    </div>

    <input type="submit" class="button is-primary" value="投稿する">

  </form>
</div>
{% endautoescape %}
